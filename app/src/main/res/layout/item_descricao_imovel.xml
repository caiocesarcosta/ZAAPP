<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.costa.cesar.caio.zaapp.view.MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_img_zap_imovel" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="445dp"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="55dp">

            <TextView
                android:id="@+id/txtTipoImovel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Tipo do Imovel"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/imgUrl"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_below="@+id/txtTipoImovel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />

            <TextView
                android:id="@+id/txtSuites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgUrl"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/txtQuartos"
                android:layout_toRightOf="@+id/txtQuartos"
                android:text="Suites" />

            <TextView
                android:id="@+id/txtQuartos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSuites"
                android:layout_alignBottom="@+id/txtSuites"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="20dp"
                android:text="quartos" />

            <TextView
                android:id="@+id/txtVagas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtSuites"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/txtSuites"
                android:layout_toRightOf="@+id/txtSuites"
                android:text="Vagas" />

            <TextView
                android:id="@+id/txtArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtVagas"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/txtVagas"
                android:layout_toRightOf="@+id/txtVagas"
                android:text="Area" />

            <TextView
                android:id="@+id/txtBairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="47dp"
                android:text="Bairro"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtQuartos"
                android:layout_alignLeft="@+id/txtQuartos"
                android:layout_alignStart="@+id/txtQuartos" />

            <TextView
                android:id="@+id/txtZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtBairro"
                android:layout_alignBottom="@+id/txtBairro"
                android:layout_toLeftOf="@+id/txtArea"
                android:layout_toStartOf="@+id/txtArea"
                android:text="Zona"
                android:textAllCaps="false"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtZona"
                android:layout_alignLeft="@+id/txtSuites"
                android:layout_alignStart="@+id/txtSuites"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed"
                android:text="PREÃ‡O"
                android:textAlignment="center"
                android:textColor="@color/colorpreco"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtRua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtBairro"
                android:layout_alignStart="@+id/txtBairro"
                android:layout_below="@+id/txtBairro"
                android:layout_marginTop="22dp"
                android:text="Rua"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtRua"
                android:layout_alignBottom="@+id/txtRua"
                android:layout_toEndOf="@+id/txtBairro"
                android:layout_toRightOf="@+id/txtBairro"
                android:text="Numero"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtNumero"
                android:layout_alignLeft="@+id/txtVagas"
                android:layout_alignStart="@+id/txtVagas"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:text="Cep" />

            <TextView
                android:id="@+id/txtCidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtRua"
                android:layout_alignStart="@+id/txtRua"
                android:layout_below="@+id/txtRua"
                android:layout_marginTop="20dp"
                android:text="Cidade"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtCidade"
                android:layout_alignLeft="@+id/txtSuites"
                android:layout_alignStart="@+id/txtSuites"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="Estado"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnContatar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:text="Falar Com (Add  Nome Cliente)"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtCidade"
                android:layout_alignStart="@+id/txtCidade" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>